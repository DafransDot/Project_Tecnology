<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BerandaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="start"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:id="@+id/TEXTVIEWProfil"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"
                    android:src="@drawable/group_43"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/TEXTVIEWName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="@font/peachdays"
            android:text="Diki Aulio Fransisko"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TEXTVIEWNomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/peachdays"
            android:padding="5dp"
            android:text="0896224567"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:paddingStart="8dp"
            android:src="@drawable/group_42"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IVHandphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_1"
                android:paddingLeft="5dp"/>

                <ImageView
                android:id="@+id/IVAccessoris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_30"
                android:paddingLeft="5dp"/>

                <ImageView
                android:id="@+id/IVSmartwatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_31"
                android:paddingLeft="5dp"/>

                <ImageView
                    android:id="@+id/IVVideogame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_13"
                    android:paddingLeft="5dp"/>
                <ImageView
                    android:id="@+id/IVSmartTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_6"
                    android:paddingLeft="5dp"/>
                <ImageView
                    android:id="@+id/IVLaptop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_5"
                    android:paddingLeft="5dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            android:fontFamily="@font/peachdays"
            android:padding="5dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_32"
            android:paddingLeft="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_44"
            android:paddingLeft="10dp"/>

    </LinearLayout>
    </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Recommendations"
            android:padding="3dp"
            android:fontFamily="@font/peachdays"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_12"
                android:paddingLeft="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_11"
                android:paddingLeft="60dp"/>
        </LinearLayout>
        </LinearLayout>
</FrameLayout>